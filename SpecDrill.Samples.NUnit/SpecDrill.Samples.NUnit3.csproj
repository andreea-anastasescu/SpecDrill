<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>

    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FluentAssertions" Version="5.10.3" />
    <PackageReference Include="NUnit" Version="3.12.0" />
    <PackageReference Include="NUnit.Allure" Version="1.0.9" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.16.1" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.5.0" />
	<PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="85.0.4183.8300" />
	<PackageReference Include="SpecDrill.NUnit3" Version="1.1.20" />
	<PackageReference Include="SpecDrill.SpecFlow" Version="1.1.3" />
	<PackageReference Include="SpecFlow" Version="3.4.3" />
	<PackageReference Include="SpecFlow.NUnit" Version="3.4.3" />
  </ItemGroup>

  <ItemGroup>
    <None Update="specDrillConfig.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="specflow_.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="AllureConfig.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
